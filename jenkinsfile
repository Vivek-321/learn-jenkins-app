pipeline {
    agent any

    stages {
        stage("Build") {
            steps {
                bat """
                echo Listing directory contents before build:
                dir /a
                
                echo Checking Node and NPM versions:
                node --version
                npm --version

                echo Installing dependencies:
                npm ci

                echo Running build script:
                npm run build

                echo Listing directory contents after build:
                dir /a
                """
            }
        }
    }
}
